<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/representative_search_textview" />
        <Constraint android:id="@id/representative_input_address_line_1" />
        <Constraint android:id="@id/representative_input_address_line_2" />
        <Constraint android:id="@id/representative_input_city" />
        <Constraint android:id="@id/representative_dropdownlist_state" />
        <Constraint android:id="@id/representative_input_zip_code" />
        <Constraint android:id="@id/representative_find_my_representatives_manual_button" />
        <Constraint android:id="@id/representative_find_my_representatives_my_location_button" />
        <Constraint android:id="@id/representative_my_representatives_textview" />
        <Constraint android:id="@id/representative_my_representatives_recyclerview" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@id/representative_search_textview" />
        <Constraint android:id="@id/representative_input_address_line_1" />
        <Constraint android:id="@id/representative_input_address_line_2" />
        <Constraint android:id="@id/representative_input_city" />
        <Constraint android:id="@id/representative_dropdownlist_state" />
        <Constraint android:id="@id/representative_input_zip_code" />
        <Constraint android:id="@id/representative_find_my_representatives_manual_button" />
        <Constraint android:id="@id/representative_find_my_representatives_my_location_button" />
        <Constraint android:id="@id/representative_my_representatives_textview" />
        <Constraint android:id="@id/representative_my_representatives_recyclerview" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start">

        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@+id/representative_my_representatives_recyclerview"
            app:touchAnchorSide="top" />

    </Transition>
</MotionScene>
